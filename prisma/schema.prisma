generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// â”€â”€â”€ KONULAR â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
model Ders {
  id        String   @id @default(cuid())
  userId    String
  ad        String
  renk      String   @default("#18C018")
  icon      String   @default("ğŸ“")
  konular   Konu[]
  createdAt DateTime @default(now())

  @@index([userId])
}

model Konu {
  id         String   @id @default(cuid())
  userId     String
  baslik     String
  aciklama   String?
  tamamlandi Boolean  @default(false)
  oncelik    Int      @default(1)
  dersId     String
  ders       Ders     @relation(fields: [dersId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([userId])
}

