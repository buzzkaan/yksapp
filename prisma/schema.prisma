model Deneme {
  id        String        @id @default(cuid())
  userId    String
  tarih     DateTime      @default(now())
  tur       DenemeType
  toplam    Int
  dogru     Int
  yanlis    Int
  bos       Int
  net       Float
  notlar    String?
  dersDetay DenemeDetay[]
  createdAt DateTime      @default(now())

  @@index([userId])
}

model DenemeDetay {
  id       String @id @default(cuid())
  denemeId String
  deneme   Deneme @relation(fields: [denemeId], references: [id], onDelete: Cascade)
  dersAdi  String
  dogru    Int
  yanlis   Int
  bos      Int
  net      Float
}

enum DenemeType {
  TYT
  AYT
}

